{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": false,
        "outDir": "libs",
        "skipLibCheck": true,
    },
    "include": [
        "src/index.ts",
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "**/*spec.ts",
    ]
}